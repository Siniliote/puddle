<form method="post" action="{{ path('app_confirmation_email', {'id': user.id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('confirmation_email' ~ user.id) }}">
    <button class="text-green-700 border border-green-700 hover:bg-green-700 hover:text-white focus:ring-4 focus:outline-none focus:ring-green-300 rounded-lg text-center inline-flex items-center me-2 dark:border-green-500 dark:text-green-500 dark:hover:text-white dark:focus:ring-green-800 dark:hover:bg-green-500">
        <span class="sr-only">Send email confirmation</span>
        <span class="px-2 py-3 text-lg inline-flex items-baseline">{{ ux_icon('material-symbols:send', {class: "w-6 h-6 fill-current"}) }}</span>
    </button>
</form>
