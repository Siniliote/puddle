{% props type = null, color = null %}

{% set role = cva({
    base: 'inline-flex font-medium rounded-full text-center px-2.5 py-0.5',
    variants: {
        color: {
            red: 'bg-rose-100 dark:bg-rose-400/30 text-rose-600 dark:text-rose-400',
            orange: 'bg-amber-100 dark:bg-amber-400/30 text-amber-600 dark:text-amber-400',
            green: 'bg-emerald-100 dark:bg-emerald-400/30 text-emerald-600 dark:text-emerald-400',
            blue: 'bg-bg-sky-100 dark:bg-bg-sky-400/30 text-bg-sky-600 dark:text-bg-sky-400',
            gray: 'bg-slate-100 dark:bg-slate-400/30 text-slate-600 dark:text-slate-400',
        }
    }
}) %}

<div {{ attributes }} class="{{ role.apply({color}) }}">
    {{ type }}
</div>
